<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Syncadia</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="styles/main.css">
    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet">
    <script src="components/theme-switcher.js"></script>
    <script src="components/timer.js"></script>
    <script src="components/nav-menu.js"></script>
    <script src="components/footer.js"></script>
    <script src="scripts/drag.js"></script>
    <script src="scripts/task-manager.js"></script>
    <script src="scripts/timer.js"></script>
    <script src="scripts/theme-selector.js"></script>
    <script src="components/progress-indicator.js"></script>
    <script src="components/task-editing-modal.js"></script>
    <script src="components/task-column.js"></script>
    <script src="components/timer-modal.js"></script>
</head>

<body class="default-theme">
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/home"><img src="/Images/logo.png" alt="Logo"></a>
        <div class="collapse navbar-collapse">
            <nav-menu></nav-menu>
        </div>
        <custom-timer></custom-timer>
        <theme-switcher></theme-switcher>
    </nav>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-2 sidebar">
                <nav class="nav flex-column">
                    <a class="nav-link" href="#">Search</a>
                    <a class="nav-link" href="#" id="open-notepad">Notes</a>
                    <a class="nav-link" href="#" id="open-calendar" data-toggle="modal"
                        data-target="#calendarModal">Calendar</a>
                    <a class="nav-link" href="#">Filters & Priorities</a>
                    <a class="nav-link" href="/projects">My Projects</a>
                    <a class="nav-link" href="#">Add Team</a>
                    <a class="nav-link" href="#">Deleted Notes</a>
                </nav>
                <button class="btn btn-dark mt-3" onclick="window.location.href='/feedback';">Give us feedback!</button>
            </div>
            <div class="col-md-10 main-content">
                <h2 class="mb-5">Start Planning!</h2>
                <div class="row mb-5">
                    <task-column class="col-md-4" tasks="<%= JSON.stringify(tasks) %>" type="TODO"></task-column>
                    <task-column class="col-md-4" tasks="<%= JSON.stringify(tasks) %>" type="IN-PROGRESS"></task-column>
                    <task-column class="col-md-4" tasks="<%= JSON.stringify(tasks) %>" type="DONE"></task-column>
                </div>
                <h2>Progress</h2>
                <p class="lead">Subheading to introduce testimonials</p>
                <div class="row text-center">
                    <progress-indicator class="col-md-4" column="TODO"
                        progress="<%= progress.todo %>"></progress-indicator>
                    <progress-indicator class="col-md-4" column="IN-PROGRESS"
                        progress="<%= progress.inProgress %>"></progress-indicator>
                    <progress-indicator class="col-md-4" column="DONE" progress="<%= progress.completed %>">
                    </progress-indicator>
                </div>
            </div>
        </div>
    </div>

    <!-- Notepad Modal -->
    <notepad-modal></notepad-modal>
    <!-- **Calendar Modal** -->
    <div class="modal fade" id="calendarModal" tabindex="-1" role="dialog" aria-labelledby="calendarModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="calendarModalLabel">Calendar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="calendar" class="border p-3" style="min-height: 500px;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Timer modal -->
    <timer-modal></timer-modal>
    <!-- Task editing modal -->
    <task-editing-modal></task-editing-modal>

    <hr>
    <!-- Footer -->
    <custom-footer></custom-footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
    <script src="script.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [
                    // Example event data
                    {
                        title: '',
                        start: '',
                        description: ''
                    },
                    {
                        title: '',
                        start: '',
                        end: '',
                        description: ''
                    },
                    {
                        title: '',
                        start: '',
                        description: ''
                    }
                ],
                eventClick: function (info) {
                    alert('Event: ' + info.event.title + '\n' +
                        'Description: ' + info.event.extendedProps.description);
                }
            });

            calendar.render();

            // **Open the Calendar Modal**
            document.getElementById('open-calendar').addEventListener('click', function () {
                $('#calendarModal').modal('show');
            });

            // Add Task to Calendar
            document.getElementById('taskForm').addEventListener('submit', function (e) {
                e.preventDefault();

                var title = document.getElementById('taskTitle').value;
                var description = document.getElementById('taskDescription').value;
                var startDate = document.getElementById('taskStartDate').value;
                var endDate = document.getElementById('taskEndDate').value;
                var reminderTime = document.getElementById('taskReminder').value;

                // Add the event to the calendar
                calendar.addEvent({
                    title: title,
                    start: startDate,
                    end: endDate,
                    description: description
                });

                // Set Reminder
                if (reminderTime) {
                    var reminderDate = new Date(startDate);
                    reminderDate.setMinutes(reminderDate.getMinutes() - reminderTime);
                    var now = new Date();
                    var timeUntilReminder = reminderDate - now;

                    if (timeUntilReminder > 0) {
                        setTimeout(function () {
                            alert('Reminder: ' + title + '\n' + description);
                        }, timeUntilReminder);
                    }
                }

                // Close modal and reset form
                $('#addTaskModal').modal('hide');
                document.getElementById('taskForm').reset();
            });
        });
    </script>

</body>

</html>