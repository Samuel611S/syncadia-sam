<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Syncadia</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="styles/main.css" rel="stylesheet">
    <script src="scripts/timer.js"></script>
    <script src="scripts/theme-selector.js"></script>
    <script src="components/theme-switcher.js"></script>
    <script src="components/timer.js"></script>
    <script src="components/nav-menu.js"></script>
    <script src="components/footer.js"></script>
</head>

<body class="default-theme">
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/home"><img src="/Images/logo.webp" alt="Logo"></a>
        <div class="collapse navbar-collapse">
            <nav-menu></nav-menu>
        </div>
        <custom-timer></custom-timer>
        <theme-switcher></theme-switcher>
    </nav>



    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-2 sidebar">
                <nav class="nav flex-column">
                    <a class="nav-link" href="#">Search</a>
                    <a class="nav-link" href="#" id="open-notepad">Notes</a>
                    <a class="nav-link" href="#">Calendar</a>
                    <a class="nav-link" href="#">Filters & Priorities</a>
                    <a class="nav-link" href="#">My Projects</a>
                    <a class="nav-link" href="#">Add Team</a>
                    <a class="nav-link" href="#">Deleted Notes</a>
                </nav>
                <button class="btn btn-dark mt-3">Give us feedback!</button>
            </div>
            <div class="col-md-10 main-content">
                <h2>Start Planning!</h2>
                <p class="lead">Subheading to introduce testimonials</p>

                <!-- Timer modal -->
                <div class="modal fade" id="timerModal" tabindex="-1" aria-labelledby="timerModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="timerModalLabel">Set Timer</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <label for="timerInput">Set timer in minutes:</label>
                                <input type="number" id="timerInput" class="form-control" placeholder="e.g., 30">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" id="start-timer">Start</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-5">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">To-Do List</h5>
                                <ul class="list-unstyled">
                                    <% if (tasks) { %>
                                        <% tasks.forEach(function(task) { %>
                                            <% if (task.status === 'TODO') { %>
                                                <li><%= task.content %></li>
                                            <% } %>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No tasks available.</p>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">In-Progress</h5>
                                <ul class="list-unstyled">
                                    <% if (tasks) { %>
                                        <% tasks.forEach(function(task) { %>
                                            <% if (task.status === 'IN-PROGRESS') { %>
                                                <li><%= task.content %></li>
                                            <% } %>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No tasks available.</p>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Complete</h5>
                                <ul class="list-unstyled">
                                    <% if (tasks) { %>
                                        <% tasks.forEach(function(task) { %>
                                            <% if (task.status === 'COMPLETE') { %>
                                                <li><%= task.content %></li>
                                            <% } %>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No tasks available.</p>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <h2>Progress</h2>
                <p class="lead">Subheading to introduce testimonials</p>
                <div class="row text-center">
                    <div class="col-md-4">
                        <h5>TODO</h5>
                        <div class="progress-circle" data-percentage="<%= progress.todo %>">
                            <div class="circle">
                                <svg viewBox="0 0 36 36" class="circular-chart pink">
                                    <path class="circle-bg" d="M18 2.0845
                                        a 15.9155 15.9155 0 0 1 0 31.831
                                        a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <path class="circle" stroke-dasharray="<%= progress.todo %>, 100" d="M18 2.0845
                                        a 15.9155 15.9155 0 0 1 0 31.831
                                        a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <text x="18" y="20.35" class="percentage"><%= Math.round(progress.todo) %>%</text>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h5>IN-PROGRESS</h5>
                        <div class="progress-circle" data-percentage="<%= progress.inProgress %>">
                            <div class="circle">
                                <svg viewBox="0 0 36 36" class="circular-chart pink">
                                    <path class="circle-bg" d="M18 2.0845
                                        a 15.9155 15.9155 0 0 1 0 31.831
                                        a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <path class="circle" stroke-dasharray="<%= progress.inProgress %>, 100" d="M18 2.0845
                                        a 15.9155 15.9155 0 0 1 0 31.831
                                        a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <text x="18" y="20.35" class="percentage"><%= Math.round(progress.inProgress) %>%</text>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h5>COMPLETE</h5>
                        <div class="progress-circle" data-percentage="<%= progress.completed %>">
                            <div class="circle">
                                <svg viewBox="0 0 36 36" class="circular-chart pink">
                                    <path class="circle-bg" d="M18 2.0845
                                        a 15.9155 15.9155 0 0 1 0 31.831
                                        a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <path class="circle" stroke-dasharray="<%= progress.completed %>, 100" d="M18 2.0845
                                        a 15.9155 15.9155 0 0 1 0 31.831
                                        a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <text x="18" y="20.35" class="percentage"><%= Math.round(progress.completed) %>%</text>
                                </svg>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Notepad Modal -->
    <div class="modal fade" id="notepadModal" tabindex="-1" aria-labelledby="notepadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="notepadModalLabel">Write your notes here!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="toolbar mb-2">
                        <button class="btn btn-sm btn-light" onclick="execCommand('bold')"><b>B</b></button>
                        <button class="btn btn-sm btn-light" onclick="execCommand('italic')"><i>I</i></button>
                        <button class="btn btn-sm btn-light" onclick="execCommand('underline')"><u>U</u></button>
                        <button class="btn btn-sm btn-light" onclick="execCommand('strikeThrough')"><s>S</s></button>
                        <button class="btn btn-sm btn-light" onclick="execCommand('justifyLeft')">Left</button>
                        <button class="btn btn-sm btn-light" onclick="execCommand('justifyCenter')">Center</button>
                        <button class="btn btn-sm btn-light" onclick="execCommand('justifyRight')">Right</button>
            
                    </div>
                    <div id="notepadContent" class="border p-3" contenteditable="true" style="height: 300px; width: 100%; max-width: 600px; margin: auto; overflow-y: auto;">
                        <!-- User can write notes here -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <hr>
     <!-- Footer -->
     <custom-footer></custom-footer>
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>