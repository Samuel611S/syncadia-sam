<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character encoding and responsive design -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Page title -->
    <title>Syncadia - Login</title>

    <!-- Bootstrap CSS for styling -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- Link to custom CSS file -->
    <link href="styles/main.css" rel="stylesheet">

    <!-- Script for handling form submission and validation -->
    <script src="scripts/signin.js"></script>
</head>

<body class="default-theme">
    <!-- Login Form Section -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4">
                    <!-- Login Icon -->
                    <div class="text-center">
                        <img src="images/login-icon.png" alt="Profile Icon" class="img-fluid mb-3" style="width: 150px;">
                    </div>

                    <!-- Conditional display for error or success message -->
                    <% if (typeof message !== 'undefined' && message) { %>
                        <p style="color: red;"><%= message %></p>
                    <% } else if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>

                    <!-- Login Form -->
                    <form id="login-form" action="/login" method="POST">
                        <!-- Email input field -->
                        <div class="form-group">
                            <label for="loginEmail">Email address</label>
                            <input type="text" class="form-control" id="loginEmail" name="email" placeholder="Enter Email" required>
                        </div>

                        <!-- Password input field with toggle visibility button -->
                        <div class="form-group">
                            <label for="loginPassword">Password</label>
                            <div class="input-group">
                                <input type="password" id="loginPassword" class="form-control" name="password" placeholder="Enter your password" required>
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#loginPassword">
                                        <i class="fas fa-eye"></i> <!-- Eye icon to toggle password visibility -->
                                    </button>                                    
                                </div>
                            </div>
                        </div>

                        <!-- Remember Me checkbox -->
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>

                        <!-- Submit button for login -->
                        <button type="submit" class="btn btn-signup btn-block mt-3">Login</button>

                        <!-- Forgot password link and Sign-up link -->
                        <div class="text-center mt-3">
                            <a href="#" id="forgot-password-link" class="text-secondary" data-toggle="modal" data-target="#forgotPasswordModal">Forgot password?</a>
                        </div>
                    </form>  

                    <!-- Sign-up link for users without an account -->
                    <p>Don't have an account? <a href="/signup">Sign up here</a>.</p>                  
                </div>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Reset Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <!-- Modal Body for reset password form -->
                <div class="modal-body">
                    <form id="forgot-password-form">
                        <!-- Input field for reset email -->
                        <div class="form-group">
                            <label for="resetEmail">Enter your email address</label>
                            <input type="email" class="form-control" id="resetEmail" placeholder="Enter email">
                        </div>
                        <!-- Submit button for sending reset link -->
                        <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts for handling Bootstrap and modal functionalities -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
