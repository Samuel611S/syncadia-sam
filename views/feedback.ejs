<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for character encoding and responsive design -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Page title -->
    <title>Syncadia - Feedback</title>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    
    <!-- Bootstrap CSS for styling -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Link to custom CSS file -->
    <link href="/styles/main.css" rel="stylesheet">

    <!-- JavaScript for theme selection and custom components -->
    <script src="scripts/theme-selector.js"></script>
    <script src="components/theme-switcher.js"></script>
    <script src="components/nav-menu.js"></script>
    <script src="components/footer.js"></script>
</head>

<body class="default-theme">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <!-- Logo linked to task manager -->
        <a class="navbar-brand" href="/task-manager"><img src="/images/logo.png" alt="Logo"></a>

        <!-- Navigation Menu Component -->
        <div class="collapse navbar-collapse">
            <nav-menu></nav-menu>
        </div>

        <!-- Theme Switcher Component -->
        <theme-switcher></theme-switcher>
    </nav>

    <!-- Main content container for feedback form -->
    <div class="container mt-5">
        <h2>We Value Your Feedback</h2>
        <p class="lead">Please share your thoughts and suggestions with us.</p>

        <!-- Feedback form -->
        <form id="feedback-form" action="/feedback" method="POST">
            <!-- Input for user's name -->
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required>
            </div>
            <!-- Input for user's email -->
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
            </div>
            <!-- Textarea for user's feedback -->
            <div class="form-group">
                <label for="feedback">Feedback:</label>
                <textarea id="feedback" class="form-control" name="content" rows="5" placeholder="Enter your feedback"></textarea>
            </div>
            <!-- Submit button for the feedback form -->
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <!-- Thank You Modal that appears after form submission -->
    <div class="modal fade" id="thankYouModal" tabindex="-1" role="dialog" aria-labelledby="thankYouModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="feedbackModal-content modal-content">
                <!-- Modal Header -->
                <div class="feedbackModal-header modal-header">
                    <h5 class="feedbackModal-title modal-title" id="thankYouModalLabel">Thank You!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!-- Modal Body -->
                <div class="feedbackModal-body modal-body">
                    Thank you for your feedback. We appreciate your input!
                </div>
                <!-- Modal Footer -->
                <div class="feedbackModal-footer modal-footer">
                    <button type="button" class="feedbackModal-btn btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Component -->
    <custom-footer></custom-footer>

    <!-- JavaScript dependencies: jQuery, Popper.js, Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <script>
        // Event listener for form submission
        document.getElementById('feedback-form').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent actual form submission

            // Show the Thank You modal
            $('#thankYouModal').modal('show');

            // Reset the form fields after submitting the modal
            document.getElementById('feedback-form').reset();
        });
    </script>
</body>
</html>
