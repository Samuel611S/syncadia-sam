<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character encoding and responsive design -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Page title -->
    <title>Syncadia - Sign Up</title>

    <!-- Bootstrap CSS for styling -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- Link to custom CSS file -->
    <link href="styles/main.css" rel="stylesheet">

    <!-- Script for handling form logic -->
    <script src="scripts/signin.js"></script>
</head>

<body class="default-theme">
    <!-- Sign Up Form Section -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4">
                    <!-- Profile Icon in the center -->
                    <div class="text-center">
                        <img src="images/login-icon.png" alt="Profile Icon" class="img-fluid mb-3" style="width: 150px;">
                    </div>

                    <!-- Conditional display for error or success messages -->
                    <% if (typeof message !== 'undefined' && message) { %>
                        <p style="color: red;"><%= message %></p>
                    <% } else if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>

                    <!-- Button to toggle between Login and Signup -->
                    <div class="d-flex justify-content-center mb-4">
                        <a href="/login" class="btn btn-signup">Log in</a>
                    </div>

                    <!-- Signup Form -->
                    <form id="signup-form" action="/signup" method="POST">
                        <!-- Full Name Input Field -->
                        <div class="form-group">
                            <label for="signupName">Full Name</label>
                            <input type="text" class="form-control" id="signupName" name="name" placeholder="Enter Full Name" required>
                        </div>

                        <!-- Email Input Field -->
                        <div class="form-group">
                            <label for="signupEmail">Email address</label>
                            <input type="email" class="form-control" id="signupEmail" name="email" placeholder="Enter Email" required>
                        </div>

                        <!-- Password Input Field with toggle visibility button -->
                        <div class="form-group">
                            <label for="signupPassword">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="signupPassword" name="password" placeholder="Enter Password" required>
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#signupPassword" id="signupToggle">
                                        <i class="fas fa-eye"></i> <!-- Eye icon to toggle password visibility -->
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button for Sign Up -->
                        <button type="submit" class="btn btn-signup">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript dependencies: jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
